<p class="bg-info">
  Find me in app/views/parks/new.html.erb
</p>

<h3>
  Create a new park listing
</h3>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<div>
  <!-- Want a form that routes to the correct path here to create a park -->

  <!-- caution: form_for is not the same as form_tag -->
  <!-- form_for takes active record object(s) and form_tag takes a path -->
  <!-- thanks michael and ellie :D -->
<%= form_for [@city, @park] do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, placeholder: "Enter park name", value: @park.name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, placeholder: "Describe the park", value: @park.description %><br>

  <%= f.submit %>
<% end %>
</div>
